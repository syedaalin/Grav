{# AI Content Block Partial - 2026 Standards Compliance #}
{% set ai_enabled = theme_config.ai_augmentation_enabled|default(true) %}

<div class="ai-block-container {{ ai_enabled ? 'ai-active' : 'ai-disabled' }}">
    <div class="ai-content-wrapper {{ ai_generated ? 'ai-generated' : '' }}">
        {% if ai_generated %}
            <div class="ai-disclosure-badge" title="This content was generated or enhanced by AI">
                âœ¨ AI Augmented
            </div>
        {% endif %}
        
        <div class="content-body">
            {% block ai_content %}
                {{ content|raw }}
            {% endblock %}
        </div>
        
        {% if ai_generated and show_reasoning %}
            <details class="ai-reasoning">
                <summary>Show Reasoning</summary>
                <div class="reasoning-body">
                    {{ reasoning|raw }}
                </div>
            </details>
        {% endif %}
    </div>
</div>

<style>
.ai-block-container {
    position: relative;
    margin: var(--space-lg, 1.5rem) 0;
}

.ai-generated {
    border-left: 2px solid var(--brand-primary, #4a7aff);
    padding-left: var(--space-sm, 1rem);
}

.ai-disclosure-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--brand-primary, #4a7aff);
    background: color-mix(in srgb, var(--brand-primary), transparent 90%);
    padding: 2px 8px;
    border-radius: var(--radius-pill, 12px);
    margin-bottom: var(--space-xs, 0.5rem);
}

.ai-reasoning {
    margin-top: var(--space-sm, 1rem);
    font-size: 0.85rem;
    color: var(--text-muted, #666);
}

.ai-reasoning summary {
    cursor: pointer;
    font-weight: 600;
}

.ai-reasoning summary:hover {
    color: var(--brand-primary);
}
</style>

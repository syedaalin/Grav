<div x-show="a11yPanel" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 translate-y-4" x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 translate-y-4" class="fixed bottom-8 inset-inline-end-8 z-[150] w-72 glass-panel p-6 rounded-3xl border-accent-gold/20 shadow-2xl" style="display: none;" @click.away="a11yPanel = false">
	<div class="flex items-center justify-between mb-6">
		<h3 class="text-xs font-black uppercase tracking-tighter text-accent-gold">Accessibility Panel</h3>
		<button @click="a11yPanel = false" class="text-sacred-white/40 hover:text-sacred-white">
			<i class="fa fa-times text-xs"></i>
		</button>
	</div>

	<div class="space-y-6">
		<div>
			<label class="block text-[10px] uppercase font-bold mb-3 text-sacred-white/40">Text Scaling</label>
			<div class="flex items-center gap-2">
				<button @click="adjustTextSize(-0.1)" class="w-10 h-10 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10">-</button>
				<div class="flex-1 text-center font-black text-xl" x-text="(Math.round(textSize * 100)) + '%'">100%</div>
				<button @click="adjustTextSize(0.1)" class="w-10 h-10 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10">+</button>
			</div>
		</div>

		<div>
			<button @click="toggleHighContrast" class="w-full py-3 rounded-xl border border-white/10 flex items-center justify-center gap-3 transition-all" :class="highContrast ? 'bg-accent-gold text-divine-dark font-black' : 'bg-white/5 hover:bg-white/10'">
				<i class="fa fa-low-vision"></i>
				High Contrast Mode
			</button>
		</div>

		<p class="text-[9px] text-sacred-white/30 italic text-center leading-tight">
			Settings are saved locally to your device for a consistent sanctum experience.
		</p>
	</div>
</div>

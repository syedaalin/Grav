<div class="bg-black/30 border-b border-white/5 py-1 px-fluid-md" x-data="{ a11yPanel: false }">
	<div class="max-w-7xl mx-auto flex justify-between items-center text-[10px] uppercase tracking-widest font-bold">
		<div class="flex items-center gap-6">
			<span class="hijri-date-display flex items-center gap-2 text-accent-gold">
				<i class="fa fa-moon-o"></i>
				Rajab 19, 1447H
			</span>
			<span class="flex items-center gap-2">
				<i class="fa fa-clock-o"></i>
				<span class="prayer-ticker prayer-countdown-timer">Syncing with Sanctum...</span>
			</span>
		</div>
		<div class="flex items-center gap-4">
			<div class="flex items-center gap-2 group relative">
				<button class="hover:text-accent-gold transition-colors flex items-center gap-1">
					<i class="fa fa-language"></i>
					<span>{{ active_lang|upper }}</span>
				</button>
				<div class="absolute top-full right-0 mt-1 bg-divine-dark border border-white/10 rounded-lg p-2 invisible group-hover:visible transition-all opacity-0 group-hover:opacity-100 z-50 min-w-[100px]">
					<a href="{{ grav.uri.addNonce(grav.uri.currentUrl()|replace({('/' ~ active_lang ~ '/'): '/en/'}), 'language') }}" class="block px-3 py-1 hover:text-accent-gold transition-colors">EN</a>
					<a href="{{ grav.uri.addNonce(grav.uri.currentUrl()|replace({('/' ~ active_lang ~ '/'): '/ur/'}), 'language') }}" class="block px-3 py-1 hover:text-accent-gold transition-colors">UR</a>
					<a href="{{ grav.uri.addNonce(grav.uri.currentUrl()|replace({('/' ~ active_lang ~ '/'): '/ar/'}), 'language') }}" class="block px-3 py-1 hover:text-accent-gold transition-colors">AR</a>
					<a href="{{ grav.uri.addNonce(grav.uri.currentUrl()|replace({('/' ~ active_lang ~ '/'): '/fa/'}), 'language') }}" class="block px-3 py-1 hover:text-accent-gold transition-colors">FA</a>
				</div>
			</div>
			<span class="text-white/20">|</span>
			<a href="{{ url('/login') }}" class="flex items-center gap-2 hover:text-accent-gold transition-colors">
				<i class="fa fa-user-circle-o"></i>
				My Dashboard
			</a>
			<span class="text-white/20">|</span>
			<button @click="toggleTheme()" class="theme-toggle hover:text-accent-gold transition-colors" title="Toggle Light/Dark Mode">
				<i class="fa fa-adjust"></i>
			</button>
			<button @click="a11yPanel = !a11yPanel" class="hover:text-accent-gold transition-colors">A11y</button>
			<span class="text-white/20">|</span>
			<span class="flex items-center gap-2">
				<i class="fa fa-map-marker"></i>
				{{ theme_config.geo_location_default|e }}
			</span>
		</div>
	</div>
</div>

<section id="khums-calc" class="max-w-4xl mx-auto px-fluid-md py-fluid-lg">
	<div
		class="glass-panel p-fluid-lg rounded-[2.5rem] relative overflow-hidden">
		{# Background geometric accent #}
		<div class="absolute -top-20 inset-inline-end-[-5rem] w-64 h-64 bg-primary-spirit/10 rounded-full blur-3xl"></div>

		<div class="relative z-10">
			<h2 class="text-3xl font-black mb-2">Khums & Sadaqah Calculator</h2>
			<p class="text-sacred-white/60 mb-8 border-b border-white/5 pb-4">Calculate your religious obligations with zero data storage. All calculations happen locally.</p>

			<form id="khums-calculator-form" class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<div class="space-y-6">
					<div>
						<label class="block text-xs uppercase tracking-widest font-bold mb-2 text-accent-gold">Annual Savings</label>
						<input type="number" id="khums-savings" class="w-full bg-white/5 border border-white/10 rounded-xl p-4 focus:border-primary-spirit outline-none transition-colors" placeholder="0.00">
					</div>
					<div>
						<label class="block text-xs uppercase tracking-widest font-bold mb-2 text-accent-gold">Gold & Jewelry (Value)</label>
						<input type="number" id="khums-gold" class="w-full bg-white/5 border border-white/10 rounded-xl p-4 focus:border-primary-spirit outline-none transition-colors" placeholder="0.00">
					</div>
				</div>
				<div class="space-y-6">
					<div>
						<label class="block text-xs uppercase tracking-widest font-bold mb-2 text-accent-gold">Business Inventory</label>
						<input type="number" id="khums-inventory" class="w-full bg-white/5 border border-white/10 rounded-xl p-4 focus:border-primary-spirit outline-none transition-colors" placeholder="0.00">
					</div>
					<div>
						<label class="block text-xs uppercase tracking-widest font-bold mb-2 text-accent-gold">Deductible Debts</label>
						<input type="number" id="khums-debts" class="w-full bg-white/5 border border-white/10 rounded-xl p-4 focus:border-primary-spirit outline-none transition-colors" placeholder="0.00">
					</div>
				</div>
			</form>

			<div class="mt-12 p-8 bg-primary-spirit/10 rounded-3xl border border-primary-spirit/20 flex flex-col md:flex-row items-center justify-between gap-8">
				<div>
					<span class="text-xs uppercase tracking-widest font-bold text-sacred-white/50 block mb-1">Total Khums Due</span>
					<span class="text-5xl font-black text-accent-gold">{{ theme_config.khums_currency }}<span id="khums-total-display">0</span>
					</span>
				</div>
				<div class="flex gap-8 border-s border-white/10 ps-8">
					<div>
						<span class="text-[10px] uppercase tracking-widest font-bold text-sacred-white/50 block">Sehme Imam (A.S)</span>
						<span class="text-xl font-bold">{{ theme_config.khums_currency }}<span id="sehme-imam-display">0</span>
						</span>
					</div>
					<div>
						<span class="text-[10px] uppercase tracking-widest font-bold text-sacred-white/50 block">Sehme Sadaat</span>
						<span class="text-xl font-bold">{{ theme_config.khums_currency }}<span id="sehme-sadaat-display">0</span>
						</span>
					</div>
				</div>
				<button id="pay-khums-btn" class="btn-sacred px-10 py-4 shadow-2xl">Donate Now</button>
			</div>
		</div>
	</div>
</section>

{% do assets.addJs('theme://js/calculators.js', { 'group': 'bottom' }) %}

{% import 'macros/components.html.twig' as ui %}

<section
	class="relative h-screen flex items-center justify-center overflow-hidden">
	{# Full Screen Video Background #}
	<div class="absolute inset-0 z-0">
		<video autoplay muted loop playsinline class="w-full h-full object-cover">
			<source src="{{ url('theme://images/hero-bg.webm') }}" type="video/webm">
		</video>
		<div class="absolute inset-0 bg-divine-dark/60"></div>
	</div>

	{# Digital Sanctum Hero Content - Random Inspiration #}
	{% set inspiration = random(theme_config.inspirations) %}
	<div class="relative z-10 max-w-4xl mx-auto text-center px-4">
		<div class="glass-panel p-fluid-lg rounded-[3rem] border-white/10 backdrop-blur-2xl">
			<div class="mb-4 text-accent-gold font-bold uppercase tracking-widest text-xs">
				{{ inspiration.category|e }}
			</div>
			<div class="mb-4 text-sacred-white/60 font-serif text-lg tracking-wide">
				{{ inspiration.source|e }}
			</div>
			<h1 class="text-4xl md:text-6xl font-black mb-6 leading-tight">
				{{ inspiration.text }}
			</h1>
			<div class="flex flex-col md:flex-row gap-4 justify-center">
				{{ ui.primary_button(theme_config.hero_primary_cta_text, theme_config.hero_primary_cta_link, 'globe') }}
				<a href="{{ theme_config.hero_secondary_cta_link }}" class="inline-flex items-center px-8 py-3 rounded-sacred font-bold bg-white/5 border border-white/10 hover:bg-white/10 transition-all">
					{{ theme_config.hero_secondary_cta_text }}
				</a>
			</div>
		</div>
	</div>
</section>

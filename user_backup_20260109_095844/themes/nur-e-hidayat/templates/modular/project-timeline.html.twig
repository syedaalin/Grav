<section class="max-w-7xl mx-auto px-fluid-md py-fluid-lg content-auto">
	<div class="mb-fluid-md text-center">
		<h2 class="text-3xl md:text-5xl font-black mb-4">NGO Transparency Timeline</h2>
		<p class="text-sacred-white/60">Live updates on our active projects and funding goals.</p>
	</div>

	<div class="space-y-8">
		{% for project in theme_config.project_timeline_list %}
			<div class="glass-panel p-fluid-md rounded-[2.5rem] flex flex-col md:flex-row gap-8 items-center">
				<div class="w-full md:w-1/3">
					<span class="text-[10px] uppercase tracking-widest font-bold px-3 py-1 bg-white/5 rounded-full mb-4 inline-block {% if project.status == 'active' %}text-primary-spirit border border-primary-spirit/20{% endif %}">
						{{ project.status|capitalize }}
					</span>
					<h3 class="text-2xl font-bold mb-4">{{ project.title }}</h3>
					<p class="text-sm text-sacred-white/60 leading-relaxed">{{ project.description }}</p>
				</div>

				<div class="w-full md:w-2/3">
					<div class="flex justify-between items-end mb-4">
						<div>
							<span class="text-xs font-bold text-sacred-white/40 block">Raised</span>
							<span class="text-2xl font-black text-accent-gold">{{ project.raised }}</span>
						</div>
						<div class="text-end">
							<span class="text-xs font-bold text-sacred-white/40 block">Goal</span>
							<span class="text-xl font-bold">{{ project.goal }}</span>
						</div>
					</div>

					{# SVG Fluid Progress Bar #}
					<div class="h-4 bg-white/5 rounded-full relative overflow-hidden ring-1 ring-white/10">
						<div class="h-full bg-primary-spirit transition-all duration-1000 ease-out shadow-[0_0_20px_rgba(6,95,70,0.5)]" style="width: {{ project.percent }}%"></div>
					</div>

					<div class="mt-6 flex justify-end">
						<button class="snipcart-add-item text-sm font-bold flex items-center gap-2 text-accent-gold group" data-item-id="{{ project.snipcart_id }}" data-item-name="{{ project.title }}" data-item-price="{{ project.suggested_donation|default('10.00') }}" data-item-url="{{ page.url }}" data-item-description="{{ project.description }}">
							Contribute to project
							<i class="fa fa-arrow-right rtl:rotate-180 group-hover:translate-x-1 rtl:group-hover:-translate-x-1 transition-transform"></i>
						</button>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</section>

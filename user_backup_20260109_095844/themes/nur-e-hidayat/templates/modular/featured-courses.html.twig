{% import 'macros/components.html.twig' as ui %}

<section class="max-w-7xl mx-auto px-fluid-md py-fluid-lg content-auto">
	<div class="flex items-center justify-between mb-fluid-md">
		<div>
			<h2 class="text-3xl md:text-5xl font-black mb-4">Sacred Academy</h2>
			<p class="text-sacred-white/60">Featured courses from the Moodle LMS integration.</p>
		</div>
		<a href="{{ theme_config.moodle_url }}" class="hidden md:flex items-center gap-2 text-accent-gold font-bold">
			View All Courses
			<i class="fa fa-external-link"></i>
		</a>
	</div>

	<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
		{% set courses_to_show = moodle_courses|default(theme_config.featured_courses_list) %}
		{% for course in courses_to_show %}
			<div class="glass-panel overflow-hidden rounded-sacred group">
				<div class="relative h-48 overflow-hidden bg-white/5 flex items-center justify-center">
					<i class="fa fa-graduation-cap text-4xl text-accent-gold/50 group-hover:scale-110 transition-transform"></i>
					<div class="absolute top-4 inset-inline-start-4 bg-primary-spirit px-3 py-1 rounded-full text-[10px] uppercase font-bold tracking-widest">
						New Enrollment
					</div>
				</div>
				<div class="p-6">
					<span class="text-[10px] uppercase tracking-widest font-bold text-accent-gold mb-2 block">{{ course.instructor }}</span>
					<h3 class="text-xl font-bold mb-4 line-clamp-2">{{ course.title }}</h3>
					<a href="{{ course.url }}" class="flex items-center justify-center w-full py-3 bg-white/5 border border-white/10 rounded-xl font-bold hover:bg-primary-spirit transition-all">
						Enroll Now
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
</div>{# Fallback / Universal Catalog Link #}<div class="mt-12 glass-panel p-12 rounded-4xl text-center border-dashed border-white/10 flex flex-col items-center">
	<i class="fa fa-book text-4xl text-accent-gold/20 mb-6"></i>
	<h4 class="text-2xl font-black mb-2">Can't find a specific subject?</h4>
	<p class="text-sacred-white/50 mb-8 max-w-sm">Access our complete digital repository of over 500+ sacred courses and seminars.</p>
	<a href="{{ theme_config.moodle_url }}" class="inline-flex items-center gap-3 px-10 py-4 bg-primary-spirit/10 border border-primary-spirit/30 rounded-full font-black text-sm uppercase tracking-widest hover:bg-primary-spirit/20 transition-all">
		Browse Full Catalog
		<i class="fa fa-arrow-right rtl:rotate-180 transition-transform"></i>
	</a>
</div></section>

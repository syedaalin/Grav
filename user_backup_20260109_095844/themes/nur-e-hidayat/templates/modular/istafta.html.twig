<section class="max-w-4xl mx-auto px-fluid-md py-fluid-lg">
	<div class="mb-fluid-md text-center">
		<h2 class="text-3xl md:text-5xl font-black mb-4">Istafta & Guidance</h2>
		<p class="text-sacred-white/60">Find answers to common questions or submit your own securely.</p>
	</div>

	<div class="space-y-4" x-data="{ selected: 1 }">
		{% set questions = page.header.questions|default([
            { id: 1, q: "How is the Hijri date calculated in this portal?", a: "The portal uses a high-precision solar-lunar calculation method calibrated to local moon sightings. You can adjust the offset in the theme settings." },
            { id: 2, q: "Are the Khums calculations stored on the server?", a: "No. For your privacy and security, all calculations happen entirely within your browser (client-side). No financial data is ever sent to our servers until you proceed to the final donation step." },
            { id: 3, q: "Can I access Moodle courses via this theme?", a: "Yes, the Nur-e-Hidayat theme is fully bridged with Moodle. Your dashboard displays your enrolled courses and progress in real-time." }
        ]) %}

		{% if questions|length > 0 %}
			{% for item in questions %}
				<div class="glass-panel overflow-hidden rounded-2xl border-white/5">
					<button @click="selected !== {{ loop.index }} ? selected = {{ loop.index }} : selected = null" class="w-full p-6 text-start flex items-center justify-between hover:bg-white/5 transition-colors">
						<span class="font-bold text-lg">{{ item.q }}</span>
						<i class="fa transition-transform duration-300" :class="selected === {{ loop.index }} ? 'fa-minus text-accent-gold rotate-180' : 'fa-plus'"></i>
					</button>
					<div class="relative overflow-hidden transition-all max-h-0 duration-500" x-ref="container{{ loop.index }}" x-bind:style="selected === {{ loop.index }} ? 'max-height: ' + $refs.container{{ loop.index }}.scrollHeight + 'px' : ''">
						<div class="p-6 pt-4 text-sacred-white/70 leading-relaxed border-t border-white/5">
							{{ item.a }}
						</div>
					</div>
				</div>
			{% endfor %}
		{% else %}
			<div class="glass-panel p-8 text-center rounded-2xl border-white/5 text-sacred-white/40">
				No frequently asked questions available at this time.
			</div>
		{% endif %}
	</div>

	{# Submission Form #}
	<div class="mt-12 glass-panel p-8 rounded-3xl border-primary-spirit/20 bg-primary-spirit/5" x-data="{ anonymous: false, submitted: false }">
		<h3 class="text-xl font-bold mb-4">Have a specific question?</h3>
		<p class="text-sm text-sacred-white/60 mb-6" x-show="!submitted">Your query will be routed to our qualified scholars. All queries are handled with strict confidentiality.</p>

		<div x-show="!submitted" class="flex flex-col md:flex-row gap-4">
			<input type="text" placeholder="Ask your question..." class="flex-1 bg-white/5 border border-white/10 rounded-xl px-6 py-3 outline-none focus:border-accent-gold transition-colors">
			<button @click="submitted = true" class="btn-sacred px-8">Submit Query</button>
		</div>

		<div x-show="submitted" x-transition class="bg-primary-spirit/20 p-6 rounded-2xl border border-primary-spirit/30 text-center">
			<i class="fa fa-check-circle text-4xl text-accent-gold mb-3"></i>
			<h4 class="text-lg font-bold">Query Submitted</h4>
			<p class="text-sm text-sacred-white/70">Your question has been received and will be answered shortly. Check your dashboard for updates.</p>
			<button @click="submitted = false" class="mt-4 text-xs font-bold text-accent-gold uppercase tracking-widest hover:underline">Ask another question</button>
		</div>
		<div class="mt-6 flex items-center justify-between border-t border-white/5 pt-6">
			<div class="flex items-center gap-2 text-[10px] uppercase font-bold tracking-widest text-sacred-white/30">
				<i class="fa fa-shield"></i>
				End-to-End Encrypted
			</div>
			<label class="flex items-center gap-3 cursor-pointer group">
				<span class="text-xs font-bold transition-colors" :class="anonymous ? 'text-accent-gold' : 'text-sacred-white/50'">Ask Anonymously</span>
				<div class="relative">
					<input type="checkbox" class="sr-only" x-model="anonymous">
					<div class="w-10 h-5 bg-white/10 rounded-full transition-colors group-hover:bg-white/20" :class="anonymous ? 'bg-accent-gold/50' : ''"></div>
					<div class="absolute inset-inline-start-1 top-1 w-3 h-3 bg-white rounded-full transition-transform" :class="anonymous ? 'translate-x-5 rtl:-translate-x-5 bg-accent-gold' : ''"></div>
				</div>
			</label>
		</div>
	</div>
</section>

{# Alpine.js is required for the accordion. In a real theme, we would add it via assets in partials/base.html.twig #}
{% do assets.addJs('https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js', { 'group': 'bottom', 'priority': 10 }) %}

{% extends 'partials/base.html.twig' %}

{% block content %}
	<section class="min-h-[70vh] flex items-center justify-center">
		<div class="text-center">
			<h1 class="text-[12rem] font-black leading-none text-primary-spirit/20 absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-0">
				{{ page.header.http_response_code }}
			</h1>
			<div class="relative z-10 glass-panel p-12 rounded-[3rem] backdrop-blur-3xl border-white/10">
				<h2 class="text-3xl font-bold mb-4">A Portal Misplaced</h2>
				<p class="text-sacred-white/60 mb-8 max-w-md mx-auto">
					{{ page.content|striptags }}
				</p>
				<a href="{{ base_url == '' ? '/' : base_url }}" class="btn-sacred">
					Return to Sanctum
				</a>
			</div>
		</div>
	</section>
{% endblock %}

{% import "macros/components.html.twig" as components %}

<section class="relative min-h-[90vh] @lg:min-h-screen flex items-center justify-center overflow-hidden bg-brand-dark text-white @container">
    {# Video Background #}
    <div class="absolute inset-0 z-0 bg-brand-dark">
        {% if page.header.video_url %}
             <video autoplay loop muted playsinline webkit-playsinline class="w-full h-full object-cover scale-105 opacity-0 animate-[fade-in_1s_ease-out_forwards]">
                <source src="{{ page.header.video_url }}" type="video/mp4">
            </video>
        {% elseif config.theme.hero_video_url %}
             <video autoplay loop muted playsinline webkit-playsinline class="w-full h-full object-cover scale-105 opacity-0 animate-[fade-in_1s_ease-out_forwards]">
                <source src="{{ url('theme://images/hero/' ~ config.theme.hero_video_url) }}" type="video/mp4">
            </video>
        {% else %}
            {# Fallback or default global video #}
        {% endif %}
        <div class="absolute inset-0 bg-black/{{ config.theme.hero_glass_opacity|default(60) }} backdrop-blur-sm"></div>
    </div>

    {# Content #}
    <div class="container mx-auto px-6 max-w-container relative z-10 grid grid-cols-1 @lg:grid-cols-2 gap-12 items-center">
        
        {# Text Content #}
        <div class="text-white space-y-8 animate-fade-in-up">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-sm font-bold uppercase tracking-widest text-brand-accent">
                <span class="w-2 h-2 rounded-full bg-brand-accent animate-pulse"></span>
                {{ page.header.badge|default('Serving Humanity Since 2005') }}
            </div>
            
            <h1 class="text-h1 font-black leading-tight tracking-tight">
                {{ page.header.title|default('Empowering Communities Through Faith & Action') }}
            </h1>
            
            <p class="text-xl text-white/80 max-w-xl leading-relaxed">
                {{ page.content|raw }}
            </p>
            
            <div class="flex flex-wrap gap-4 pt-4">
                {# Primary CTA #}
                {% set primary_text = page.header.primary_btn_text|default(config.theme.hero_primary_cta_text) %}
                {% set primary_link = page.header.primary_btn_link|default(config.theme.hero_primary_cta_link) %}
                
                {% if primary_text %}
                    {{ components.cta_button(primary_text, primary_link, 'primary') }}
                {% endif %}

                {# Secondary CTA #}
                {% set secondary_text = page.header.secondary_btn_text|default(config.theme.hero_secondary_cta_text) %}
                {% set secondary_link = page.header.secondary_btn_link|default(config.theme.hero_secondary_cta_link) %}
                
                {% if secondary_text %}
                    {{ components.cta_button(secondary_text, secondary_link, 'secondary') }}
                {% endif %}
            </div>
        </div>
        
        {# Daily Inspiration Widget #}
        {% if config.theme.inspiration_text %}
        <div class="hidden @lg:block">
            <div class="bg-white/5 backdrop-blur-2xl border border-white/10 p-10 rounded-[3rem] shadow-2xl relative overflow-hidden group hover:bg-white/10 transition-colors duration-500">
                <i class="las la-quote-right absolute top-8 right-8 text-8xl text-white/5 group-hover:text-white/10 transition-colors"></i>
                
                <div class="relative z-10 space-y-6">
                    <span class="text-xs font-black uppercase tracking-[0.2em] text-white/40">Daily Inspiration</span>
                    <blockquote class="text-3xl font-serif italic leading-relaxed text-white">
                        {{ config.theme.inspiration_text }}
                    </blockquote>
                    <cite class="block font-sans font-bold text-brand-accent not-italic">
                        â€” {{ config.theme.inspiration_source }}
                    </cite>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
    
    {# Scroll Indicator #}
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-white/50 animate-bounce">
        <span class="text-[10px] uppercase tracking-widest">Scroll</span>
        <i class="las la-arrow-down"></i>
    </div>
</section>

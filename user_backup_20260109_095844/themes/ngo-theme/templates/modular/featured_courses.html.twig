{% import "macros/components.html.twig" as components %}

<section class="py-32 bg-brand-light dark:bg-brand-dark relative overflow-hidden @container [content-visibility:auto] [contain-intrinsic-size:600px]">
    {# Decorative Blob #}
    <div class="absolute top-0 right-0 w-1/3 h-full bg-brand-primary/5 blur-3xl rounded-l-full pointer-events-none"></div>

    <div class="container mx-auto px-6 max-w-container relative z-10">
        <div class="flex flex-col @md:flex-row items-end justify-between mb-16 gap-8">
            <div class="max-w-2xl">
                 <span class="text-brand-primary font-bold uppercase tracking-widest text-sm mb-2 block">
                    Education Portal
                </span>
                <h2 class="text-h2 font-black text-brand-dark dark:text-white mb-4">
                    {{ page.header.title|default('Knowledge Without Borders') }}
                </h2>
                <p class="text-lg text-brand-gray dark:text-white/60">
                    Access world-class religious and secular education through our LMS integrations.
                </p>
            </div>
            
            <a href="https://moodle.aabtaab.com" class="shrink-0 px-8 py-4 bg-white dark:bg-surface-sunken text-brand-dark dark:text-white border border-surface-sunken dark:border-white/10 rounded-[1.5rem] font-bold uppercase tracking-widest hover:border-brand-primary hover:text-brand-primary transition-all shadow-lg shadow-black/5">
                View All Courses <i class="las la-external-link-alt ml-2"></i>
            </a>
        </div>
        
        <div class="grid grid-cols-1 @md:grid-cols-2 @xl:grid-cols-3 gap-8">
            {% set courses = page.header.courses ?: config.theme.featured_courses_list %}
            
            {% for course in courses %}
                {{ components.course_card(course) }}
            {% else %}
                <div class="col-span-1 @md:col-span-2 @xl:col-span-3 text-center text-brand-gray py-12">
                    <p>No courses currently featured.</p>
                </div>
            {% endfor %}
        </div>
        
        {# Student Login Widget #}
        <div class="mt-16 bg-brand-primary text-white rounded-[2.5rem] p-12 relative overflow-hidden flex flex-col @md:flex-row items-center justify-between gap-12 group">
            <div class="absolute inset-0 bg-[url('theme://images/pattern.svg')] opacity-10"></div>
            <div class="absolute -right-20 -bottom-40 w-96 h-96 bg-white/10 rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
            
            <div class="relative z-10 flex items-start gap-6">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center text-3xl shrink-0 backdrop-blur-sm">
                    <i class="las la-user-circle"></i>
                </div>
                <div>
                    <h3 class="text-2xl font-black mb-2">{{ config.theme.student_login_title }}</h3>
                    <p class="text-white/80 text-lg">{{ config.theme.student_login_description }}</p>
                </div>
            </div>
            
            <a href="https://moodle.aabtaab.com/login" class="relative z-10 bg-white text-brand-primary px-10 py-5 rounded-[1.5rem] font-black uppercase tracking-widest hover:bg-brand-bg transition-colors shadow-2xl">
                {{ config.theme.student_login_button_text }}
            </a>
        </div>
    </div>
</section>

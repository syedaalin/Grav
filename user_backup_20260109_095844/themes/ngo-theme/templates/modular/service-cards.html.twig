{# Service Cards (Bento Grid) - Refactored #}
{% import 'macros/components.html.twig' as components %}

<section class="service-bento py-32 bg-brand-dark overflow-hidden @container [content-visibility:auto] [contain-intrinsic-size:1000px]">
    <div class="container mx-auto px-6 max-w-container">
        <header class="max-w-3xl mb-24 space-y-4">
            <span class="text-xs font-black uppercase tracking-[0.4em] text-brand-primary animate-in slide-in-from-left duration-700">Our Services</span>
            <h2 class="text-h2 font-black text-white tracking-tighter leading-tightest">
                {{ page.header.title|default('Expert Consultation & Ethics') }}
            </h2>
            <p class="text-xl text-white/50 font-medium leading-relaxed">
                {{ page.content|striptags|default('Bridging traditional values with modern business and personal needs.') }}
            </p>
        </header>

        <div class="grid grid-cols-1 @md:grid-cols-6 @xl:grid-cols-12 gap-8 auto-rows-[350px]">
            {% set services = page.header.services|default(theme_config.services_list) %}
            
            {% for service in services %}
                {% if loop.first %}
                    {# Service 1: Large Bento Card #}
                    <div class="group/bento @md:col-span-6 @xl:col-span-8 @xl:row-span-2 relative p-12 bg-gradient-to-br from-surface-sunken to-brand-dark rounded-[3rem] border border-white/5 overflow-hidden transition-all duration-700 hover:shadow-4xl hover:shadow-brand-primary/10 hover:border-brand-primary/20">
                        <div class="relative z-10 flex flex-col h-full justify-between">
                            <div class="space-y-8">
                                <div class="w-20 h-20 bg-white/5 flex items-center justify-center rounded-3xl text-brand-primary shadow-inner border border-white/5 group-hover/bento:scale-110 transition-transform duration-500">
                                    <span class="la la-{{ service.icon|default('star') }} text-4xl"></span>
                                </div>
                                <div class="space-y-4">
                                    <h3 class="text-h2 font-black text-white tracking-tighter leading-[0.9]">{{ service.title }}</h3>
                                    <p class="text-white/40 text-lg max-w-md leading-relaxed">{{ service.description }}</p>
                                </div>
                            </div>
                            <div>
                                {{ components.cta_button('Learn More', service.link|default('#'), 'primary') }}
                            </div>
                        </div>
                        {# Background Decoration #}
                        <div class="absolute bottom-[-10%] right-[-10%] w-[500px] h-[500px] bg-brand-primary/10 blur-[150px] rounded-full animate-pulse-slow pointer-events-none"></div>
                    </div>
                {% else %}
                    {# Standard Bento Card #}
                    <div class="@md:col-span-3 @xl:col-span-4 p-10 bg-white/5 backdrop-blur-3xl border border-white/10 rounded-[2.5rem] flex flex-col justify-between hover:bg-white/10 transition-all group/bento duration-500 hover:-translate-y-2">
                        <div class="space-y-6">
                            <div class="w-14 h-14 bg-white/10 flex items-center justify-center rounded-2xl text-brand-secondary group-hover/bento:bg-brand-secondary group-hover/bento:text-white transition-all shadow-lg">
                                <span class="la la-{{ service.icon|default('check') }} text-3xl"></span>
                            </div>
                            <div>
                                <h3 class="text-2xl font-black text-white tracking-tight mb-2">{{ service.title }}</h3>
                                <p class="text-white/40 text-sm leading-relaxed">{{ service.description }}</p>
                            </div>
                        </div>
                        <div class="h-1.5 w-full bg-white/5 rounded-full overflow-hidden mt-6">
                            <div class="h-full bg-brand-secondary w-1/2 group-hover/bento:w-full transition-all duration-700 ease-premium"></div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

            {# Horizontal Banner Card (WhatsApp CTA) #}
            <div class="@md:col-span-6 @xl:col-span-4 bg-gradient-to-br from-brand-secondary to-brand-primary p-10 rounded-[2.5rem] flex items-center justify-between group/cta shadow-2xl shadow-brand-primary/20 hover:brightness-110 transition-all cursor-pointer relative overflow-hidden">
                <div class="relative z-10 space-y-3">
                    <h3 class="text-2xl font-black text-white tracking-tight leading-tight">Need Urgent <br>Consultation?</h3>
                    <p class="inline-block px-3 py-1 bg-white/20 rounded-lg text-white text-[10px] font-black uppercase tracking-widest backdrop-blur-sm">24/7 WhatsApp</p>
                </div>
                <!-- WhatsApp Link Wrapper -->
                <a href="https://wa.me/{{ theme_config.contact_whatsapp|default('923000000000') }}" class="absolute inset-0 z-20" aria-label="Contact via WhatsApp"></a>
                
                <div class="relative z-10 w-20 h-20 bg-white/20 rounded-full flex items-center justify-center text-white text-4xl transition-transform group-hover/cta:scale-125 hover:rotate-12">
                    <span class="la la-whatsapp"></span>
                </div>
                
                {# Noise Texture Overlay #}
                <div class="absolute inset-0 opacity-10 bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI0IiBoZWlnaHQ9IjQiPgo8cmVjdCB3aWR0aD0iNCIgaGVpZ2h0PSI0IiBmaWxsPSIjZmZmIi8+CjxyZWN0IHdpZHRoPSIxIiBoZWlnaHQ9IjEiIGZpbGw9IiMwMDAiLz4KPC9zdmc+')] mix-blend-overlay"></div>
            </div>
        </div>
    </div>
</section>

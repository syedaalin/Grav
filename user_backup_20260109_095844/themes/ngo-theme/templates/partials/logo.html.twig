{# Site Logo Component - 2026 Premium Standards #}
<a href="{{ base_url == '' ? '/' : base_url }}" class="group/logo relative block focus:outline-none" aria-label="Navigate to Home">
    {% set logo = theme_var('custom_logo') ? (theme_var('custom_logo')|first) : null %}
    {% if logo %}
        <div class="relative transition-all duration-300 hover:scale-105">
            <img src="{{ url('theme://images/logo/' ~ logo.name) }}" alt="{{ site.title }}" class="h-14 @xl:h-16 w-auto max-w-[250px] object-contain" loading="eager">
        </div>
    {% else %}
        <div class="flex items-center gap-4 py-2 px-6 bg-white/20 backdrop-blur-3xl rounded-[1.5rem] border border-white/10 shadow-lg group-hover/logo:bg-brand-primary group-hover/logo:text-white transition-all duration-700 active:scale-95">
            <span class="la la-infinity text-4xl text-brand-primary group-hover/logo:text-white transition-colors duration-500 group-hover/logo:rotate-180 transition-transform duration-1000"></span>
            <span class="text-3xl font-black font-heading tracking-tightest leading-none drop-shadow-sm">{{ site.title }}</span>
        </div>
    {% endif %}
</a>
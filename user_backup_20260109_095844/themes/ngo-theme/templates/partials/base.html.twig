{% set body_classes = body_class(['header-fixed', 'header-animated', 'header-dark', 'header-transparent', 'sticky-footer']) %}
{% set grid_size = theme_var('grid-size') %}
{% set compress = theme_var('production-mode') ? '.min.css' : '.css' %}
{% use 'blocks/base.html.twig' %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}" class="scroll-smooth focus-within:scroll-auto">
<head>
{% block head deferred %}
    <meta charset="utf-8" />
    <title>{% if page.title %}{{ page.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    {% include 'partials/metadata.html.twig' %}

    {% set favicon_img = theme_var('custom_logo') ? url('theme://images/logo/' ~ (theme_var('custom_logo')|first).name) : url('theme://images/favicon.png') %}
    <link rel="icon" href="{{ favicon_img }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />
    <meta name="view-transition" content="same-origin" />

    {# AI-Ready Structured Data (Rule 3.3 Semantic & AI-Ready HTML) #}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NGO",
      "name": "{{ site.title }}",
      "url": "{{ grav.base_url_absolute }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ grav.base_url_absolute }}{{ url('theme://images/logo.svg') }}"
      },
      "description": "{{ site.metadata.description }}",
      "foundingDate": "2026-01-01", 
      "areaServed": "Global",
      "knowsAbout": ["Islam", "Education", "Digital Transformation", "Ethics"],
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "{{ config.theme.contact_address }}"
      },
      "email": "{{ config.theme.contact_email }}",
      "sameAs": [
        {% for social in config.theme.social_links %}
          "{{ social.url }}"{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
    </script>
{% endblock head %}

{% block stylesheets %}
    {% do assets.addCss('theme://css/build.css') %}
    {% do assets.addCss('theme://css/line-awesome.min.css') %}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('theme://js/site.js', {group:'bottom'}) %}
    <script>
        window.themeSettings = {
            ai_disclosure: {{ theme_var('ai_disclosure') ? 'true' : 'false' }},
            ai_assistant: {{ theme_var('ai_assistant') ? 'true' : 'false' }},
            focus_mode: {{ theme_var('focus_mode') ? 'true' : 'false' }},
            doodle_engine: {{ theme_var('doodle_engine') ? 'true' : 'false' }}
        };
    </script>
{% endblock %}

{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
</head>
<body id="top" class="antialiased text-brand-dark bg-brand-bg font-sans selection:bg-brand-primary selection:text-white transition-all duration-700 {% block body_classes %}{{ body_classes }}{% endblock %}" itemscope itemtype="https://schema.org/WebPage">
    <nav aria-label="Skip links">
        <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-8 focus:left-8 focus:z-[100] focus:px-10 focus:py-5 focus:bg-brand-primary focus:text-white focus:rounded-[2rem] focus:shadow-4xl focus:font-black focus:uppercase focus:tracking-widest transition-all">Skip to main content</a>
    </nav>
    
    {% if theme_var('ai_disclosure') %}
        {% include 'partials/ai-disclosure.html.twig' ignore missing %}
    {% endif %}
    
    {% if theme_var('doodle_engine') %}
    <div id="doodle-container" class="fixed inset-0 pointer-events-none z-[-1]" aria-hidden="true"></div>
    {% endif %}

    <div id="page-wrapper" class="min-h-screen flex flex-col relative @container overflow-x-hidden">
    {% block header %}
        {% include 'partials/header.html.twig' %}
    {% endblock %}

    {% block hero %}{% endblock %}

    <main id="main-content" class="flex-grow" role="main">
        {% block body %}
            <div id="body-wrapper" class="py-32 @container">
                <article class="container mx-auto px-6 max-w-container" itemprop="mainEntityOfPage">
                    <header>
                        {% block messages %}
                            {% include 'partials/messages.html.twig' ignore missing %}
                        {% endblock %}
                    </header>
                    {{ block('content_surround') }}
                </article>
            </div>
        {% endblock %}
    </main>

    {% block footer %}
        {% include 'partials/footer.html.twig' %}
    {% endblock %}

    {% include 'partials/cmp.html.twig' ignore missing %}

    {% block bottom %}
        {{ assets.js('bottom')|raw }}
    {% endblock %}
    </div>
</body>
</html>

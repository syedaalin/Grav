{% set body_classes = [
    theme_var('agent_header_fixed') ? 'header-fixed' : '',
    theme_var('agent_header_animated') ? 'header-animated' : '',
    theme_var('agent_header_dark') ? 'header-dark' : '',
    theme_var('agent_header_transparent') ? 'header-transparent' : '',
    theme_var('agent_footer_sticky') ? 'sticky-footer' : '',
    theme_var('physic_eco_mode') ? 'eco-mode' : '',
    theme_var('physic_focus_mode') ? 'focus-mode' : ''
]|join(' ')|trim %}
{% set grid_size = theme_var('agent_gov_gridSize') %}
{% set compress = theme_var('agent_gov_production') ? '.min.css' : '.css' %}
{% use 'blocks/base.html.twig' %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head deferred %}
    <meta charset="utf-8" />
    <title>{% if page.title %}{{ page.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}
    {% include 'partials/structured-data.html.twig' %}

    {% set favicon = theme_var('agent_identity_logo') ? theme_var('agent_identity_logo')|first : null %}
    {% if favicon %}
    <link rel="icon" type="image/png" href="{{ url('theme://images/logo/' ~ favicon.name) }}" />
    {% endif %}
    <link rel="canonical" href="{{ page.url(true, true) }}" />
{% endblock head %}

{% block stylesheets %}
    {% do assets.addCss('theme://css-compiled/spectre'~compress) %}
    {% if theme_var('spectre.exp') %}{% do assets.addCss('theme://css-compiled/spectre-exp'~compress) %}{% endif %}
    {% if theme_var('spectre.icons') %}{% do assets.addCss('theme://css-compiled/spectre-icons'~compress) %}{% endif %}
    {% do assets.addCss('theme://css-compiled/theme'~compress) %}
    {% do assets.addCss('theme://css/custom.css') %}
    {% do assets.addCss('theme://css/line-awesome.min.css') %}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('theme://js/email-deobfuscate.js', {group:'bottom'}) %}
    {% do assets.addJs('theme://js/builder-features.js', {group:'bottom'}) %}
    {% do assets.addJs('theme://js/theme-core.js', {group:'bottom'}) %}
{% endblock %}

{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
{% include 'partials/custom-styles.html.twig' %}

{# =========================================================================
   MODERN WEB FEATURES: Polyfills & Progressive Enhancement
   ========================================================================= #}
<script>
// Anchor Positioning Polyfill (2026 Standard)
if (!CSS.supports('anchor-name', '--test')) {
    const script = document.createElement('script');
    script.src = 'https://unpkg.com/@oddbird/css-anchor-positioning';
    script.async = true;
    document.head.appendChild(script);
    console.log('Gravity: Loading Anchor Positioning polyfill');
}

// View Transitions API (2026 Progressive Enhancement)
if ('startViewTransition' in document) {
    document.addEventListener('click', (e) => {
        const link = e.target.closest('a');
        if (link && link.href && !link.target && link.origin === location.origin && !link.href.includes('#')) {
           e.preventDefault();
            document.startViewTransition(() => {
                window.location.href = link.href;
            });
        }
    });
    console.log('Gravity: View Transitions API Active');
}
</script>
</head>
<body id="top" class="{% block body_classes %}{{ body_classes }}{% endblock %}" data-haptics="{{ theme_var('agent_gov_haptics')|default('false') }}">
    <a href="#start" class="skip-to-content">Skip to main content</a>
    <div id="page-wrapper">
    {% block header %}
        <section id="header" class="section">
            <section class="container {{ grid_size }}">
                <nav class="navbar" role="navigation" aria-label="Primary navigation">
                    {% include 'partials/header-builder.html.twig' %}
                </nav>
            </section>
        </section>
        <div class="mobile-menu">
            <button 
                class="button_container" 
                id="toggle"
                aria-label="Toggle mobile navigation menu"
                aria-expanded="false"
                aria-controls="overlay"
                type="button">
                <span class="top"></span>
                <span class="middle"></span>
                <span class="bottom"></span>
            </button>
        </div>
    {% endblock %}

    {% block hero %}
        {% include 'partials/hero-builder.html.twig' %}
    {% endblock %}

        <section id="start">
        {% block body %}
            <section id="body-wrapper" class="section">
                <section class="container {{ grid_size }}">
                    {% block messages %}
                        {% include 'partials/messages.html.twig' ignore missing %}
                    {% endblock %}
                    {{ block('content_surround') }}
                </section>
            </section>
        {% endblock %}
        </section>

    </div>

    {% block footer %}
        {% include 'partials/footer.html.twig' %}
    {% endblock %}

    {% block mobile %}
    <div class="mobile-container">
        <div class="overlay" id="overlay">
            <div class="mobile-logo">
                {% include 'partials/logo.html.twig' with {mobile: true} %}
            </div>
            <nav class="overlay-menu" role="navigation" aria-label="Mobile navigation">
                {% include 'partials/navigation.html.twig' with {tree: true} %}
            </nav>
        </div>
    </div>
    {% endblock %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
    <script src="{{ url('theme://js/navigation.js') }}" defer></script>
{% endblock %}

</body>
</html>

<style>
    :root{
        --bg:#0f0f10;
        --panel:#151515;
        --muted:#cfcfcf;
        --accent:#d4af37;
        --danger:#b91c1c;
        --gap:24px;
        --maxw:1200px;
        --radius:6px;
        --ff: 'Open Sans', Helvetica, Arial, sans-serif;
    }

    /* Base */
    .aabtaab-footer{
        background:var(--bg);
        color:#fff;
        padding:48px 0 0 0;
        font-family:var(--ff);
        font-size:15px;
        line-height:1.5;
    }

    /* Use CSS Grid to create fully fluid, responsive columns */
    .footer-container{
        display:grid;
        grid-template-columns:repeat(auto-fit, minmax(240px, 1fr));
        gap:var(--gap);
        max-width:var(--maxw);
        margin:0 auto;
        padding:0 20px 36px;
        align-items:start;
    }

    .footer-col{padding:6px 0}

    .footer-heading{
        color:#fff;
        font-size:18px;
        margin-bottom:14px;
        font-weight:700;
        text-transform:uppercase;
        border-bottom:2px solid var(--accent);
        display:inline-block;
        padding-bottom:6px;
    }

    .footer-tagline{color:var(--muted);font-style:italic;margin-bottom:12px}

    /* Links */
    .aabtaab-footer a{color:#e6e6e6;text-decoration:none;transition:color .18s,transform .15s}
    .aabtaab-footer a:focus{outline:3px solid rgba(212,175,55,.18);outline-offset:3px}
    .aabtaab-footer a:hover{color:var(--accent)}

    /* Social */
    .social-section p{margin:0 0 8px}
    .social-icons{display:flex;flex-wrap:wrap;gap:8px}
    .social-btn{display:inline-flex;align-items:center;gap:8px;background:#222;padding:10px 12px;border-radius:8px;color:#fff;font-size:14px}
    .social-btn i{font-size:16px}
    .social-btn:hover{background:var(--accent);color:#000}

    /* Contact list */
    .contact-list{list-style:none;padding:0;margin:0}
    .contact-list li{display:flex;align-items:center;gap:10px;margin-bottom:12px;color:var(--muted)}
    .contact-list .icon{color:var(--accent);font-size:18px}

    /* Form */
    .footer-form{display:flex;gap:0;margin-top:8px;margin-bottom:18px}
    .footer-form input{padding:12px 14px;border:0;border-radius:8px 0 0 8px;flex:1;background:#fff;color:#111;font-size:14px}
    .footer-form input::placeholder{color:#7d7d7d}
    .footer-form input:focus{outline:3px solid rgba(212,175,55,.12);outline-offset:2px}
    .footer-form button{background:var(--accent);color:#000;border:0;padding:12px 16px;border-radius:0 8px 8px 0;font-weight:700;cursor:pointer}
    .footer-form button:hover{background:#e8c56a}

    /* Donate */
    .donate-wrapper{margin-top:4px}
    .donate-btn{background:var(--danger);color:#fff;padding:12px 20px;border-radius:10px;display:inline-block;font-weight:700;box-shadow:0 6px 14px rgba(0,0,0,.35);transition:transform .12s}
    .donate-btn:hover{transform:translateY(-3px);background:#9e1717}

    /* Bottom */
    .footer-bottom{background:#060606;padding:14px 0;font-size:13px;color:#9a9a9a;border-top:1px solid #222}
    .bottom-content{max-width:var(--maxw);margin:0 auto;display:flex;justify-content:space-between;align-items:center;gap:12px;padding:0 20px;flex-wrap:wrap}
    .bottom-content p{margin:4px 0}
    .bottom-content strong{color:#fff}

    /* Tablet / small desktop */
    @media (max-width:1024px){
        :root{--gap:20px}
        .footer-heading{font-size:17px}
    }

    /* Mobile adjustments */
    @media (max-width:768px){
        .aabtaab-footer{padding-top:28px}
        .footer-container{grid-template-columns:1fr;gap:18px;padding-bottom:24px}
        .footer-heading{font-size:16px}
        .social-icons{justify-content:flex-start}
        .footer-form{flex-direction:column}
        .footer-form input,.footer-form button{width:100%;border-radius:8px;margin-bottom:10px}
        .footer-form button{border-radius:8px}
        .donate-btn{display:block;width:100%;text-align:center;padding:14px}
        .bottom-content{flex-direction:column;align-items:center;text-align:center}
    }

    /* Extra small phones - increase tap targets */
    @media (max-width:420px){
        .social-btn{padding:12px 14px;font-size:15px;border-radius:10px}
        .contact-list .icon{font-size:20px}
        .footer-form input{padding:14px}
    }

    /* Utility: make sure focus states are visible for keyboard users */
    .social-btn:focus,.donate-btn:focus{outline:3px solid rgba(212,175,55,.18);outline-offset:3px}
</style>
{% extends "forms/field.html.twig" %}

{% block input %}
    {% set id = field.id|default(field.name) ~ '-' ~ key %}
    <div class="{{ form_field_wrapper_classes ?: 'form-input-wrapper' }} {{ field.size }} {{ field.wrapper_classes }} @container">
        <label class="flex items-center cursor-pointer group select-none" for="{{ id|e }}">
            <div class="relative">
                <input
                    name="{{ (scope ~ field.name)|fieldName }}"
                    value="{{ value|join(', ') }}"
                    type="checkbox"
                    class="sr-only peer"
                    {% if value == true %} checked="checked" {% endif %}
                    id="{{ id|e }}"
                    {% if field.disabled or isDisabledToggleable %}disabled="disabled"{% endif %}
                    {% if required %}required="required"{% endif %}
                />
                {# Track #}
                <div class="w-14 h-7 bg-subtle peer-focus:ring-4 peer-focus:ring-primary/10 rounded-full transition-all duration-300 peer-checked:bg-primary shadow-inner-premium"></div>
                {# Thumb #}
                <div class="absolute left-1 top-1 w-5 h-5 bg-white rounded-full transition-all duration-300 transform peer-checked:translate-x-7 shadow-lg"></div>
            </div>
            
            <span class="ml-4 text-sm font-black text-gray-700 uppercase tracking-widest group-hover:text-primary transition-colors">
                {{ field.label|t|e }} 
                {% if field.validate.required in ['on', 'true', 1] %}
                    <span class="text-primary ml-1">*</span>
                {% endif %}
            </span>
        </label>
    </div>
{% endblock %}


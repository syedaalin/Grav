{% extends "forms/field.html.twig" %}

{% set originalValue = value %}
{% set value = (value is null ? field.default : value) %}
{% if field.use == 'keys' and field.default %}
    {% set value = field.default|merge(value) %}
{% endif %}

{% block global_attributes %}
    {{ parent() }}
    data-grav-keys="{{ field.use == 'keys' ? 'true' : 'false' }}"
    data-grav-field-name="{{ (scope ~ field.name)|fieldName }}"
{% endblock %}

{% block input %}
    <div class="flex flex-wrap gap-4 @container">
    {% for key, text in field.options %}

        {% set id = field.id|default(field.name) ~ '-' ~ key %}
        {% set name = field.use == 'keys' ? key : id %}
        {% set val = field.use == 'keys' ? '1' : key %}
        {% set checked = (field.use == 'keys' ? value[key] : key in value) %}
        {% set help = (key in field.help_options|keys ? field.help_options[key] : false) %}

        <div class="checkbox-item group">
            <label class="flex items-center cursor-pointer select-none" for="{{ id|e }}">
                <div class="relative form-indicator rounded-lg group-hover:border-primary/50">
                    <input type="checkbox"
                           id="{{ id|e }}"
                           value="{{ val|e }}"
                           name="{{ (scope ~ field.name)|fieldName ~ '[' ~ name ~ ']' }}"
                           {% if checked %}checked="checked"{% endif %}
                           class="sr-only peer"
                           {% if field.classes is defined %}class="{{ field.classes }}" {% endif %}
                           {% if field.disabled or isDisabledToggleable %}disabled="disabled"{% endif %}
                    >
                    <div class="form-check-mark rounded-lg peer-checked:scale-100 peer-focus:shadow-[0_0_0_4px_oklch(var(--color-primary)/0.1)]">
                        <i class="la la-check text-white text-xs font-black"></i>
                    </div>
                </div>

                <span class="ml-3 form-label-text group-hover:text-primary">
                    {% if help %}
                        <span class="hint--bottom" data-hint="{{ help|t|e('html_attr') }}">{{ text|t|e }}</span>
                    {% else %}
                        {{ text|t|e }}
                    {% endif %}
                </span>
            </label>
        </div>
    {% endfor %}
    </div>
{% endblock %}


{% extends 'partials/base.html.twig' %}

{% block content %}
	<div id="error" class="flex flex-col items-center justify-center py-20 text-center">
		<div class="max-w-md bg-white p-12 rounded-lg shadow-xl border border-gray-100">
			<h1 class="text-6xl font-extrabold text-blue-600 mb-4">{{ page.header.http_response_code }}</h1>
			<h2 class="text-2xl font-bold text-gray-800 mb-6">{{ 'PLUGIN_ERROR.ERROR'|t }}</h2>
			<div class="text-gray-600 mb-8">
				{{ page.content|raw }}
			</div>
            <a href="{{ home_url }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 shadow-sm transition-all">
                {{ 'THEME_NUR_UL_HUDA.ERROR.BACK_TO_HOME'|t|default('Back to Home') }}
            </a>
		</div>
	</div>
{% endblock %}

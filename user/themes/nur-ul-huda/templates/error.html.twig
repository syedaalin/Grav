{% extends 'partials/base.html.twig' %}

{% block body %}
    <section id="error" class="relative min-h-[60vh] flex items-center justify-center py-20 @container overflow-hidden">
        {# Decorative Background Glow #}
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full bg-[radial-gradient(circle_at_center,var(--color-primary),transparent_70%)] opacity-5 pointer-events-none" aria-hidden="true"></div>

        <div class="relative z-10 max-w-2xl w-full container-px">
            <div class="card-glass p-12 @lg:p-16 text-center animate-fade-in-up">
                <div class="inline-flex items-center justify-center w-24 h-24 rounded-3xl bg-primary/10 text-primary mb-8">
                    <span class="text-5xl font-black">{{ page.header.http_response_code }}</span>
                </div>
                
                <h1 class="section-title mb-6">
                    {{ 'PLUGIN_ERROR.ERROR'|t }}
                </h1>
                
                <div class="prose-custom mb-10 mx-auto">
                    {{ page.content|raw }}
                </div>

                <div class="flex flex-col @sm:flex-row items-center justify-center gap-4">
                    <a href="{{ home_url }}" class="btn-primary px-10 py-5">
                        <i class="la la-home mr-2 text-lg"></i>
                        {{ 'THEME_NUR_UL_HUDA.ERROR.BACK_TO_HOME'|t|default('Back to Home') }}
                    </a>
                    
                    <button onclick="window.history.back()" class="inline-flex items-center justify-center px-10 py-5 bg-surface-subtle text-white rounded-2xl font-black text-sm uppercase tracking-widest hover:bg-black transition-all shadow-xl shadow-black/20">
                        <i class="la la-arrow-left mr-2 text-lg"></i>
                        Go Back
                    </button>
                </div>
            </div>
            
            <p class="mt-8 text-center text-subtle font-bold text-xs uppercase tracking-[0.2em] opacity-40">
                Error Code: {{ page.header.http_response_code }}
            </p>
        </div>
    </section>
{% endblock %}


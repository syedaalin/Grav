{% extends 'partials/base.html.twig' %}

{% block body %}
	<main
		id="error" class="error-page-section" style="container-type: inline-size;">
		{# Decorative Background Glow #}
		<div class="error-page-glow" aria-hidden="true"></div>

		<div class="error-page-content">
			<div class="error-card">
				<div class="error-code-badge">
					<span class="error-code">{{ page.header.http_response_code }}</span>
				</div>

				<h1 class="section-title error-title">
					{{ 'PLUGIN_ERROR.ERROR'|t }}
				</h1>

				<div class="prose-custom error-message">
					{{ page.content|raw }}
				</div>

				<div class="error-actions">
					<a href="{{ home_url }}" class="btn-primary error-home-button">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" class="error-icon">
							<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"/>
						</svg>
						Back to Home
					</a>

					<button onclick="window.history.back()" class="error-back-button">
						<i class="la la-arrow-left error-back-icon"></i>
						Go Back
					</button>
				</div>
			</div>

			<p class="error-code-footer">
				Error Code:
				{{ page.header.http_response_code }}
			</p>
		</div>
	</main>
{% endblock %}

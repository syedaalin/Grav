<section class="section py-12 md:py-16 lg:py-24 modular-timeline relative overflow-hidden">
    {# Decorative Elements #}
    <div class="absolute top-0 right-0 w-1/3 h-full bg-primary/5 -skew-x-12 translate-x-1/2"></div>
    
    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            {{ page.content|raw }}
        </div>

        <div class="max-w-4xl mx-auto space-y-12">
            {% for project in page.header.projects %}
                <div class="flex flex-col md:flex-row gap-8 items-center group">
                    <div class="w-full md:w-1/3 text-right">
                        <h4 class="text-xl font-bold text-gray-900 group-hover:text-primary transition-colors">{{ project.title }}</h4>
                        <p class="text-sm text-gray-500 uppercase tracking-widest mt-1">{{ project.status }}</p>
                    </div>
                    
                    <div class="hidden md:flex flex-col items-center">
                        <div class="w-4 h-4 rounded-full bg-primary ring-4 ring-primary/20"></div>
                        {% if not loop.last %}
                            <div class="w-0.5 h-24 bg-gray-200 mt-2"></div>
                        {% endif %}
                    </div>

                    <div class="w-full md:w-2/3 glass p-6 rounded-3xl">
                        <div class="flex justify-between mb-2">
                            <span class="text-sm font-bold text-gray-700">Funding Progress</span>
                            <span class="text-sm font-bold text-primary">{{ project.progress }}%</span>
                        </div>
                        <div class="w-full bg-gray-100 h-3 rounded-full overflow-hidden">
                            <div class="bg-primary h-full transition-all duration-1000 ease-out" style="width: {{ project.progress }}%"></div>
                        </div>
                        
                        {% if project.url %}
                            <div class="mt-6">
                                <a href="{{ project.url }}" class="inline-flex items-center text-sm font-bold px-6 py-2 bg-accent text-gray-900 rounded-xl hover:bg-accent/80 transition-all">
                                    Contribute Now <i class="fa fa-heart ml-2 text-red-500"></i>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

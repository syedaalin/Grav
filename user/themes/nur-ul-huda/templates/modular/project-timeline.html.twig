<section class="modular-section modular-timeline">
    {# Decorative Elements #}
    <div class="timeline-decoration" aria-hidden="true"></div>
    
    <div class="section-container timeline-container">
        <div class="timeline-intro animate-fade-in-up">
            {% if page.content %}
                <div class="prose-custom max-w-none">
                    {{ page.content|raw }}
                </div>
            {% endif %}
        </div>

        <div class="timeline-list">
            {% for project in page.header.projects %}
                <div class="timeline-item" 
                     style="animation-delay: {{ loop.index0 * 0.1 }}s">
                    <div class="timeline-header">
                        <h3 class="timeline-title">{{ project.title }}</h3>
                        <p class="timeline-status">{{ project.status }}</p>
                    </div>
                    
                    <div class="timeline-connector">
                        <div class="timeline-dot"></div>
                        {% if not loop.last %}
                            <div class="timeline-line"></div>
                        {% endif %}
                    </div>

                    <div class="timeline-content">
                        <div class="timeline-progress-header">
                            <span class="timeline-progress-label">Funding Progress</span>
                            <span class="timeline-progress-value">{{ project.progress }}%</span>
                        </div>
                        <div class="timeline-progress-bar">
                            <div class="timeline-progress-fill" 
                                 style="width: {{ project.progress }}%"></div>
                        </div>
                        
                        {% if project.url %}
                            <div class="timeline-action">
                                <a href="{{ project.url }}" 
                                   class="btn-primary timeline-button"
                                   aria-label="Contribute to {{ project.title }}">
                                    Contribute Now 
                                    <i class="la la-heart timeline-heart" aria-hidden="true"></i>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="section section-py modular-timeline relative overflow-hidden @container">
    {# Decorative Elements #}
    <div class="absolute top-0 right-0 w-1/3 h-full bg-[oklch(var(--color-primary)/0.05)] -skew-x-12 translate-x-1/2 animate-pulse-subtle" aria-hidden="true"></div>
    
    <div class="container-px mx-auto relative z-10">
        <div class="text-center mb-16 max-w-3xl mx-auto animate-fade-in-up">
            {% if page.content %}
                <div class="prose-custom max-w-none">
                    {{ page.content|raw }}
                </div>
            {% endif %}
        </div>

        <div class="max-w-4xl mx-auto space-y-12">
            {% for project in page.header.projects %}
                <div class="flex flex-col @md:flex-row gap-8 items-center group animate-fade-in-up" 
                     style="animation-delay: {{ loop.index0 * 0.1 }}s">
                    <div class="w-full @md:w-1/3 text-center @md:text-right">
                        <h3 class="text-xl font-black text-gray-950 group-hover:text-primary transition-colors tracking-tight">{{ project.title }}</h3>
                        <p class="text-[10px] text-subtle uppercase tracking-[0.2em] mt-2 font-black italic">{{ project.status }}</p>
                    </div>
                    
                    <div class="hidden @md:flex flex-col items-center shrink-0">
                        <div class="w-4 h-4 rounded-full bg-primary shadow-[0_0_0_4px_oklch(var(--color-primary)/0.2)] group-hover:scale-125 transition-transform duration-300"></div>
                        {% if not loop.last %}
                            <div class="w-0.5 h-24 bg-subtle mt-2"></div>
                        {% endif %}
                    </div>

                    <div class="w-full @md:w-2/3 card-glass p-8">
                        <div class="flex justify-between mb-4 items-end">
                            <span class="text-[10px] font-black text-subtle uppercase tracking-[0.2em]">Funding Progress</span>
                            <span class="text-xl font-black text-primary tabular-nums">{{ project.progress }}%</span>
                        </div>
                        <div class="w-full bg-subtle/20 h-3 rounded-full overflow-hidden shadow-inner-premium-premium">
                            <div class="bg-primary h-full transition-all duration-1000 ease-out will-change-[width]" 
                                 style="width: {{ project.progress }}%"></div>
                        </div>
                        
                        {% if project.url %}
                            <div class="mt-8 flex justify-end">
                                <a href="{{ project.url }}" 
                                   class="btn-primary"
                                   aria-label="Contribute to {{ project.title }}">
                                    Contribute Now 
                                    <i class="la la-heart ml-2 text-red-500 animate-pulse" aria-hidden="true"></i>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>


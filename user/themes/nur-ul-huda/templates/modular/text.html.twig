{% set grid_size = theme_var('grid-size') %}
{% set image = page.media.images|first %}

<section class="section py-12 md:py-16 lg:py-24 modular-text {{ page.header.class}} bg-gray-50">
    <section class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 {{ page.header.image_align|default('align-right') == 'align-right' ? '' : 'flex-row-reverse' }}">
            {% if image %}
            <div class="text-content">
                {{ content|raw }}
            </div>
            <div class="image-content">
                {{ image.html|raw }}
            </div>
            {% else %}
            <div class="col-span-full">
                {{ content|raw }}
            </div>
            {% endif %}
        </div>
    </section>
</section>

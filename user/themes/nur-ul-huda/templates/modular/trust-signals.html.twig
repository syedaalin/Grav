<section class="modular-section modular-trust-signals">
    <div class="section-container animate-fade-in-up">
        <div class="trust-signals-container">
            {% for signal in page.header.signals %}
                <div class="trust-signal">
                    <div class="trust-signal-icon"
                         style="background-color: oklch(from {{ signal.color|default('var(--color-primary)') }} L C H / 0.1); color: {{ signal.color|default('var(--color-primary)') }}">
                        <i class="la la-fw {{ signal.icon }}" aria-hidden="true"></i>
                    </div>
                    <div class="trust-signal-value">
                        {{ signal.title }}
                    </div>
                    <div class="trust-signal-label">
                        {{ signal.text }}
                    </div>
                </div>
                {% if not loop.last %}
                    <div class="trust-signal-divider" aria-hidden="true"></div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

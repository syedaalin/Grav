<section class="section py-12 md:py-16 lg:py-24 modular-trust-signals">
    <div class="container mx-auto px-4">
        <div class="glass flex flex-wrap justify-center gap-12 md:gap-24 p-12 rounded-[40px] border-primary/10">
            {% for signal in page.header.signals %}
                <div class="text-center group flex flex-col items-center">
                    <div class="w-16 h-16 rounded-2xl flex items-center justify-center text-3xl mb-4 transition-all duration-500 group-hover:scale-110 group-hover:-rotate-6"
                         style="background-color: {{ signal.color|default('#2ecc71') }}15; color: {{ signal.color|default('#2ecc71') }}">
                        <i class="fa fa-fw {{ signal.icon }}"></i>
                    </div>
                    <div class="text-4xl font-black text-gray-900 mb-1 font-serif">
                        {{ signal.title }}
                    </div>
                    <div class="text-xs font-bold text-gray-500 uppercase tracking-widest">
                        {{ signal.text }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

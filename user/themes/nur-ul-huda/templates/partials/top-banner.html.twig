{# ANNOUNCEMENT TICKER (Uses ViewHelper logic for Time Windows) #}
{% if top_banner.show_announcement and top_banner.announcement_text %}
	<div class="ticker-component" style="--ticker-bg: {{ top_banner.bg_color }}; --ticker-text: {{ top_banner.text_color }};">
		<div class="container ticker-wrapper">
			{# Speed comes in seconds, CSS var expects duration #}
			<div class="ticker-marquee" style="--marquee-duration: {{ top_banner.announcement_speed }}s;" data-pause="{{ top_banner.pause_on_hover ? 'true' : 'false' }}">
				<span class="ticker-content">
					{% if top_banner.announcement_link %}
						<a href="{{ top_banner.announcement_link }}" class="ticker-link" {% if top_banner.announcement_new_tab %} target="_blank" {% endif %}>{{ top_banner.announcement_text }}</a>
					{% else %}
						{{ top_banner.announcement_text }}
					{% endif %}
				</span>
				
				{# Duplicate for infinite scroll effect #}
				<span class="ticker-content" aria-hidden="true">
					{% if top_banner.announcement_link %}
						<a href="{{ top_banner.announcement_link }}" class="ticker-link" tabindex="-1" {% if top_banner.announcement_new_tab %} target="_blank" {% endif %}>{{ top_banner.announcement_text }}</a>
					{% else %}
						{{ top_banner.announcement_text }}
					{% endif %}
				</span>
			</div>
		</div>
	</div>
{% endif %}

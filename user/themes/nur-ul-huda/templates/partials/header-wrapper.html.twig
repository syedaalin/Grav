{# A. TOP STICKY BANNER (Radiant Trio) #}
{# Forced display:block ensures visibility across different page layouts #}
{% set ticker_enabled = theme_var('ticker_enabled') %}
{% set announcement_enabled = theme_var('top_banner_announcement_enabled') %}
{% set show_top_bar = (ticker_enabled == '1' or ticker_enabled == true) or (announcement_enabled == '1' or announcement_enabled == true) %}
	{% if show_top_bar %}
		<div class="header-top-sticky"> {% include 'partials/top-banner.html.twig' %}
	</div>
{% endif %}

{# B. MAIN NAVIGATION HEADER (Glassmorphism) #}
<header id="header" class="header-main-sticky" role="banner">
	<div class="container container-px header-spacing">
		<nav
			class="header-nav" aria-label="Main navigation">

			{# ZONE A: Mobile Toggle / Desktop Logo #}
			<div class="header-zone-a">
				{# Mobile Toggle (Left: Services) #}
				<button id="mobile-toggle-left" class="mobile-toggle mobile-only" aria-label="Open Left Sidebar" data-direction="left" aria-controls="sidebar-left" aria-expanded="false">
					<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" fill="none" viewbox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="icon-lg">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
					</svg>
				</button>
			</div>

			{# ZONE B: Mobile Logo / Desktop Navigation #}
			<div class="header-zone-b">
				{# Center Logo (Unified for Mobile & Desktop) #}
				<div class="logo-hover">
					{% include 'partials/logo.html.twig' %}
				</div>

				{# Desktop Navigation #}
				<div class="desktop-only desktop-nav">
					{% include 'partials/navigation.html.twig' with {mobile: false} %}
				</div>
			</div>

			{# ZONE C: User Actions #}
			<div class="header-zone-c">
				{# Mobile Toggle (Right: Global) #}
				<button id="mobile-toggle-right" class="mobile-toggle ml-2 mobile-only" aria-label="Open Right Sidebar" data-direction="right" aria-controls="sidebar-right" aria-expanded="false">
					<svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" fill="none" viewbox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="icon-lg">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
					</svg>
				</button>
			</div>
		</nav>
	</div>
</header>

{# Bottom Banner Newsletter Strip #}
{% set enabled = theme_var('bottom_banner_newsletter_enabled') %}
{% set title = theme_var('bottom_banner_newsletter_title')|default('Stay Connected') %}
{% set text = theme_var('bottom_banner_newsletter_text')|default('Join our spiritual journey for weekly insights.') %}

{% if enabled %}
	<section class="bottom-banner-newsletter" aria-labelledby="newsletter-heading">
		<div class="newsletter-container">
			<div class="newsletter-content">
				<h3 id="newsletter-heading" class="newsletter-title">{{ title }}</h3>
				<p class="newsletter-description">{{ text }}</p>
			</div>

			<div
				class="newsletter-form-wrapper">
				{# Simple newsletter form - usually handled by Grav Form plugin or custom script #}
				<form class="newsletter-form" action="{{ base_url }}/newsletter-signup" method="post">
					<div class="input-group">
						<input type="email" name="email" placeholder="Enter your email" required aria-label="Email address" class="newsletter-input">
						<button type="submit" class="newsletter-submit">
							<span>Subscribe</span>
							<i class="la la-paper-plane"></i>
						</button>
					</div>
					{# Security nonces would be added here in a real form implementation #}
				</form>
			</div>
		</div>
	</section>
{% endif %}

<a href="{{ home_url }}" 
   class="font-black text-xl mr-spacing-base relative z-10 group focus:input-focus" 
   title="{{ site.title|e('html') }}" 
   aria-label="{{ site.title|default('Home') }}">
{% if logo_var %}
  {% set logo_media = media['theme://images/logo/' ~ (logo_var|first).name] %}
  {% set logo_img = mobile ? logo_media.resize(80, 80) : logo_media.resize(160, 160) %}
  <img src="{{ logo_img.url }}" 
       width="{{ logo_img.width }}" 
       height="{{ logo_img.height }}" 
       alt="{{ site.title|default('Site Logo') }}" 
       class="w-auto object-contain transition-transform duration-500 group-hover:scale-105 h-[clamp(2rem,5vh,3.5rem)]"
       fetchpriority="high"
       decoding="async" />
{% else %}
  <div class="w-auto object-contain transition-transform duration-500 group-hover:scale-105 h-[clamp(2rem,5vh,3.5rem)] text-primary">
    {% include('@images/grav-logo.svg') ignore missing %}
    {% if not logo_media %}
        <span class="text-gradient font-black tracking-tighter">{{ site.title|default('NUR-UL-HUDA') }}</span>
    {% endif %}
  </div>
{% endif %}
</a>
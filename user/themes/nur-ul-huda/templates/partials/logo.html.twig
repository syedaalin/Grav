<a href="{{ home_url }}" class="logo-link" title="{{ logo.site_title|e('html') }}" aria-label="{{ logo.site_title|default('Home') }}">

	{# 1. Logo Image #}
	{% if logo.image %}
		{% if mobile %}
			<img src="{{ logo.image_mobile }}" width="{{ logo.width_mobile }}" height="{{ logo.height_mobile }}" alt="{{ logo.site_name|default('Site Logo') }}" class="logo-image" fetchpriority="high" decoding="async"/>
		{% else %}
			<img src="{{ logo.image_desktop }}" width="{{ logo.width_desktop }}" height="{{ logo.height_desktop }}" alt="{{ logo.site_name|default('Site Logo') }}" class="logo-image" fetchpriority="high" decoding="async"/>
		{% endif %}
	{% else %}
		{# Fallback: Grav Logo only if NO site name and NO logo #}
		{% if not logo.site_name %}
			<div class="logo-fallback">
				{% include('@images/grav-logo.svg') ignore missing %}
			</div>
		{% endif %}
	{% endif %}

	{# 2. Site Name Text (Hidden on Mobile) #}
	{% if logo.site_name %}
		<span class="logo-text desktop-only">{{ logo.site_name }}</span>
	{% endif %}
</a>

<div class="card bg-white rounded-lg shadow break-inside-avoid mb-6 overflow-hidden">
    {% set image = page.media.images|first %}
    {% if image %}
    <div class="card-image block">
        <a href="{{ page.url }}">{{ image.cropZoom(800,400).html|raw }}</a>
    </div>
    {% endif %}
    <div class="card-header p-6 pb-2">
        <div class="card-subtitle text-gray-500 text-sm mb-1">
            {% include 'partials/blog/date.html.twig' %}
    </div>
        <div class="card-title text-xl font-bold">
        {% include 'partials/blog/title.html.twig' with {title_level: 'h5'} %}
        </div>
    </div>
    <div class="card-body p-6 pt-2">
        {% if page.summary != page.content %}
            {{ page.summary|raw }}
        {% else %}
            {{ page.content|raw }}
        {% endif %}
    </div>
    <div class="card-footer p-6 pt-0">
        {% include 'partials/blog/taxonomy.html.twig' %}
    </div>
</div>


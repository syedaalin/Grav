{% set feed_url = blog.url == '/' or blog.url == base_url_relative ? (base_url_relative~'/'~blog.slug) : blog.url %}
{% set new_base_url = blog.url == '/' ? '' : blog.url %}

{% if config.plugins.simplesearch.enabled %}
<div class="mb-8">
    {% include 'partials/simplesearch_searchbox.html.twig' %}
</div>
{% endif %}
{% if config.plugins.relatedpages.enabled and related_pages|length > 0 %}
<div class="mb-8">
    <h4>{{ 'THEME_NUR_UL_HUDA.SIDEBAR.RELATED_POSTS.HEADLINE'|t }}</h4>
    {% include 'partials/relatedpages.html.twig' %}
</div>
{% endif %}
{% if config.plugins.random.enabled %}
<div class="mb-8">
	<h4>{{ 'THEME_NUR_UL_HUDA.SIDEBAR.RANDOM_ARTICLE.HEADLINE'|t }}</h4>
	<a class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" href="{{ base_url }}/random"><i class="fa fa-retweet mr-1"></i> {{ 'THEME_NUR_UL_HUDA.SIDEBAR.RANDOM_ARTICLE.FEELING_LUCKY'|t }}</a>
</div>
{% endif %}

{{ page.find('/modules/sidebar').content|raw }}

{% if config.plugins.taxonomylist.enabled %}
<div class="mb-8">
    <h4>{{ 'THEME_NUR_UL_HUDA.SIDEBAR.POPULAR_TAGS.HEADLINE'|t }}</h4>
    {% include 'partials/taxonomylist.html.twig' with {'base_url':new_base_url, 'taxonomy':'tag', 'children_only':true} %}
</div>
{% endif %}
{% if config.plugins.archives.enabled %}
<div class="mb-8">
    <h4>{{ 'THEME_NUR_UL_HUDA.SIDEBAR.ARCHIVES.HEADLINE'|t }}</h4>
	{% include 'partials/archives.html.twig' with {'base_url':new_base_url} %}
</div>
{% endif %}
{% if config.plugins.feed.enabled %}
<div class="mb-8 syndicate">
    <h4>{{ 'THEME_NUR_UL_HUDA.SIDEBAR.SYNDICATE.HEADLINE'|t }}</h4>
    <a class="inline-flex items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 mr-1" href="{{ feed_url }}.atom"><i class="fa fa-rss-square mr-1"></i> Atom 1.0</a>
    <a class="inline-flex items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 mr-1" href="{{ feed_url }}.rss"><i class="fa fa-rss-square mr-1"></i> RSS</a>
    {% if config.plugins.feed.enable_json_feed %}<a class="inline-flex items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 mr-1" href="{{ feed_url }}.json"><i class="fa fa-rss-square mr-1"></i> JSON</a>{% endif %}
</div>
{% endif %}

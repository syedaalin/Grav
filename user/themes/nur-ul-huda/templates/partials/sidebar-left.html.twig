{# Mobile Services Menu (Left) #}
<div class="mobile-menu">
	<div
		id="sidebar-left" class="mobile-menu-overlay" role="dialog" aria-modal="true" aria-label="Services Navigation" data-direction="left">

		{# Backdrop #}
		<div id="backdrop-left" class="mobile-menu-backdrop"></div>

		{# Sidebar #}
		<div id="sidebar-left-panel" class="mobile-sidebar">
			<div
				class="mobile-sidebar-inner">
				{# Overlay Content #}
				<div class="mobile-sidebar-content">
					<div class="mobile-header-actions flex justify-end pb-4">
						<button id="close-left" class="mobile-close-btn mobile-toggle" aria-label="Close Menu" aria-controls="sidebar-left">
							<i class="las la-times icon-xl"></i>
						</button>
					</div>

					{# Services Nav #}
					<nav
						class="mobile-nav stack-s animate-fade-in-up delay-100">
						{# Import Macros #}
						{% import 'macros/macros.html.twig' as macros %}

						{# Fetch Services Page specifically #}
						{% set services_page = pages.find('/services') %}

						<ul class="nav-list">
							{% if services_page %}
								{# Show Services Children #}
								{{ macros.nav_loop(services_page, true) }}
							{% else %}
								<li>
									<span class="nav-link">Services not found</span>
								</li>
							{% endif %}
						</ul>
					</nav>
				</div>

				{# Overlay Footer #}
				<div class="mobile-sidebar-footer animate-fade-in-up delay-200">
					<h4 class="mobile-footer-title">Our Services</h4>
				</div>
			</div>
		</div>
	</div>
</div>

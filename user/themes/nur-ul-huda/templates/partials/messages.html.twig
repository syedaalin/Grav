{% set type_mapping = {
    'info': 'message-info', 
    'error': 'message-error', 
    'warning': 'message-warning', 
    'success': 'message-success'
} %}
{% set icon_mapping = {
    'info': 'la-info-circle', 
    'error': 'la-times-circle', 
    'warning': 'la-exclamation-triangle', 
    'success': 'la-check-circle'
} %}

{% if grav.messages.all %}
    <div id="messages" class="messages-list">
    {% for message in grav.messages.fetch %}
        {% set scope = message.scope|e %}
        {% set type_classes = type_mapping[scope] ?: 'message-default' %}
        {% set icon_name = icon_mapping[scope] ?: 'la-bell' %}

        <div class="message-item {{ type_classes }}">
            <span class="message-icon-wrapper">
                <i class="la {{ icon_name }}" aria-hidden="true"></i>
            </span>
            <div class="message-content">
                {{ message.message|raw }}
            </div>
        </div>
    {% endfor %}
    </div>
{% endif %}
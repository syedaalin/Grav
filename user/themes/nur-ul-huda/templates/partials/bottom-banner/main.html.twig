<footer id="bottom-banner" class="bottom-banner-main" role="contentinfo" aria-label="Site bottom banner">

	{% include 'partials/bottom-banner/schema.html.twig' %}

	{# Decorative Background Pattern #}
	<div class="bottom-banner-pattern" aria-hidden="true">
		<svg xmlns="http://www.w3.org/2000/svg">
			<defs>
				<pattern id="bottom-banner-pattern" x="0" y="0" width="40" height="40" patternunits="userSpaceOnUse">
					<circle cx="20" cy="20" r="1" fill="currentColor"/>
				</pattern>
			</defs>
			<rect width="100%" height="100%" fill="url(#bottom-banner-pattern)"/>
		</svg>
	</div>

	<div class="bottom-banner-layout-stack">
		{% for widget in bottom_banner.widgets %}
			{% if widget == 'brand' %}
				{% include 'partials/bottom-banner/brand.html.twig' %}

			{% elseif widget == 'newsletter' %}
				{# Newsletter Strip #}
				{% include 'partials/bottom-banner/newsletter.html.twig' %}

			{% elseif widget == 'social' %}
				{# Social Strip #}
				<div class="bottom-banner-social-strip">
					<div class="bottom-banner-body">
						<section class="bottom-banner-social-section" aria-label="Social Media Links">
							{% include 'partials/social-icons.html.twig' with {'context': 'bottom_banner'} %}
						</section>
					</div>
				</div>

			{% elseif widget == 'nav' %}
				{% include 'partials/bottom-banner/nav.html.twig' %}

			{% elseif widget == 'copyright' %}
				{% include 'partials/bottom-banner/copyright.html.twig' %}
			{% endif %}
		{% endfor %}
	</div>

	{# Back to Top Button #}
	{# Back to Top Button with Scroll Progress #}
	<a href="#top" class="back-to-top" aria-label="Back to top" data-back-to-top>
		<svg class="progress-ring" width="100%" height="100%" viewbox="0 0 100 100">
			<circle class="progress-ring-circle" cx="50" cy="50" r="46"/>
		</svg>
		<i class="la la-angle-up icon-lg" aria-hidden="true"></i>
	</a>
</footer>

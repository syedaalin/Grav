{# Bottom Banner Newsletter Strip #}
{% if bottom_banner.newsletter_enabled %}
	<section class="bottom-banner-newsletter" aria-label="Newsletter Subscription">
		<div class="newsletter-container">

			<div class="newsletter-content">
				<h3 class="newsletter-title">{{ bottom_banner.newsletter_title|default('Subscribe to our Newsletter') }}</h3>
				<p class="newsletter-description">{{ bottom_banner.newsletter_description|default('Stay updated with the latest prayer times, events, and community news.') }}</p>
			</div>

			<div class="newsletter-form-wrapper">
				{# Simple newsletter form - usually handled by Grav Form plugin or custom script #}
				<form class="newsletter-form" action="{{ base_url }}/newsletter-signup" method="post">
					{# Honeypot for spam protection #}
					<div style="display: none;" aria-hidden="true">
						<input type="text" name="website_honeypot" tabindex="-1" autocomplete="off">
					</div>

					<div class="input-group">
						<div class="newsletter-input-wrapper">
							<input 
								type="email" 
								name="email" 
								id="newsletter-email"
								placeholder=" " 
								required 
								class="newsletter-input"
								autocomplete="email"
								inputmode="email"
								spellcheck="false"
							>
							<label for="newsletter-email" class="newsletter-label">Your email address</label>
						</div>
						<button type="submit" class="newsletter-submit" aria-label="Subscribe">
							<span>Subscribe</span>
							<i class="la la-paper-plane" aria-hidden="true"></i>
						</button>
					</div>
                    <div class="form-status" aria-live="polite"></div>
				</form>
			</div>
		</div>
	</section>
{% endif %}

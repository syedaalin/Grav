<div class="child-list-grid">
	{% for child in collection %}
		<a
			href="{{ child.url }}" class="child-card">

			{# Background Image (Optional) #}
			{% set child_image = child.media.images|first %}
			{% if child_image %}
				<div class="bg">
					<img src="{{ child_image.cropZoom(600, 600).derivative('webp').url }}" width="600" height="600" alt="{{ child.title|e('html_attr') }}" class="child-image" loading="lazy" decoding="async">
				</div>
			{% endif %}

			<div
				class="content">
				{# Icon #}
				<div class="icon">
					{% if child.header.icon %}
						<i class="la la-fw {{ child.header.icon }}" aria-hidden="true"></i>
					{% else %}
						<i class="la la-fw la-star" aria-hidden="true"></i>
					{% endif %}
				</div>

				<h3 class="title">
					{{ child.title }}
				</h3>

				<div class="text">
					{{ child.summary|striptags|default(child.content|striptags|truncate(150)) }}
				</div>

				<div class="label">
					Discover
					<i class="la la-arrow-right" aria-hidden="true"></i>
				</div>
			</div>

			<div class="glow"></div>
		</a>
	{% endfor %}
</div>

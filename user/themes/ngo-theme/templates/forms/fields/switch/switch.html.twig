{% extends "forms/field.html.twig" %}

{% block input %}
    <div class="{{ form_field_wrapper_classes ?: 'mb-2' }} {{ field.size }} {{ field.wrapper_classes }}">
        <label class="group relative flex items-center gap-4 cursor-pointer select-none">
            <div class="relative">
                <input
                    type="checkbox"
                    name="{{ (scope ~ field.name)|fieldName }}"
                    value="{{ value|join(', ') }}"
                    class="peer sr-only"
                    role="switch"
                    aria-checked="{% if value == true %}true{% else %}false{% endif %}"
                    {% if value == true %} checked="checked" {% endif %}
                    {% if field.disabled or isDisabledToggleable %}disabled="disabled"{% endif %}
                    {% if required %}required="required" aria-required="true"{% endif %}
                    {% if field.id is defined %}id="{{ field.id|e }}"{% endif %}
                />
                <div class="w-14 h-8 bg-brand-dark/10 rounded-full peer-checked:bg-brand-primary transition-all duration-300 group-hover:ring-4 group-hover:ring-brand-primary/5" aria-hidden="true"></div>
                <div class="absolute left-1 top-1 w-6 h-6 bg-white rounded-full transition-all duration-300 shadow-sm peer-checked:translate-x-6" aria-hidden="true"></div>
            </div>
            <span class="text-sm font-black text-brand-dark/60 group-hover:text-brand-primary transition-colors">{{ field.label|t|e }}</span>
        </label>
    </div>
{% endblock %}

{# Semantic Grid Layout #}
<div class="grid grid-cols-1 @lg:grid-cols-12 gap-16 @container animate-in fade-in duration-700" role="presentation" aria-label="Page Content Grid">
    <div class="{{ show_sidebar ? '@lg:col-span-8' : '@lg:col-span-12' }} space-y-16" role="main">
        {% block item %}{% endblock %}
    </div>
    {% if show_sidebar %}
    <aside class="@lg:col-span-4 space-y-12" aria-label="Sidebar Content">
        {% block sidebar %}{% endblock %}
    </aside>
    {% endif %}
</div>


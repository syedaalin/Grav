{% set title_level = title_level ?: 'h2' %}
{% if page.header.link %}
    <{{ title_level }} class="p-name {{ classes|default('text-4xl @md:text-5xl font-black font-heading text-brand-dark tracking-tighter leading-tight drop-shadow-sm hover:text-brand-primary transition-colors') }}">
        <a href="{{ page.header.link }}" class="u-url flex items-center gap-4 group" aria-label="External link to {{ page.title }}">
            <span>{{ page.title }}</span>
            <span class="la la-external-link-alt text-2xl opacity-40 group-hover:opacity-100 group-hover:translate-x-1 group-hover:-translate-y-1 transition-all" aria-hidden="true"></span>
        </a>
    </{{ title_level }}>
{% else %}
    <{{ title_level }} class="p-name {{ classes|default('text-4xl @md:text-5xl font-black font-heading text-brand-dark tracking-tighter leading-tight drop-shadow-sm hover:text-brand-primary transition-colors') }}">
        <a href="{{ page.url }}" class="u-url" aria-label="Read full post: {{ page.title }}">{{ page.title }}</a>
    </{{ title_level }}>
{% endif %}

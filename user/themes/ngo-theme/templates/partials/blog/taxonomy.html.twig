{% if page.taxonomy.tag %}
<ul class="flex flex-wrap gap-2.5" role="list" aria-label="Tags">
    {% for tag in page.taxonomy.tag %}
    <li role="listitem">
        <a class="group inline-flex items-center gap-2 px-5 py-2 rounded-xl text-[10px] font-black uppercase tracking-widest bg-surface-sunken/40 backdrop-blur-3xl border border-brand-primary/10 text-brand-dark/60 hover:bg-brand-primary hover:text-white hover:-translate-y-1 transition-all p-category shadow-xl shadow-black/5" href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}#body-wrapper">
            <span class="la la-hashtag text-brand-primary group-hover:text-white transition-colors opacity-40" aria-hidden="true"></span>
            {{ tag }}
        </a>
    </li>
    {% endfor %}
</ul>
{% endif %}

{% extends 'partials/base.html.twig' %}

{% block body %}
    <div class="py-32 bg-brand-bg @container min-h-[70vh]">
        <div class="container mx-auto px-6 max-w-5xl animate-in fade-in slide-in-from-bottom-8 duration-1000">
            <div class="prose prose-2xl prose-slate max-w-none text-brand-dark mb-20 leading-relaxed font-medium">
                {{ page.content|raw }}
            </div>
            <div class="pt-20 border-t border-brand-primary/10">
                <div class="flex items-center gap-6 mb-16">
                    <div class="w-16 h-16 rounded-2xl bg-brand-primary/10 text-brand-primary flex items-center justify-center shadow-lg" aria-hidden="true">
                        <span class="la la-comments text-3xl"></span>
                    </div>
                    <div>
                        <h3 class="text-4xl font-black font-heading text-brand-dark tracking-tightest leading-none mb-2">Community Discussion</h3>
                        <p class="text-sm font-medium text-brand-dark/40 tracking-tight uppercase tracking-widest leading-none">Voices of the scholars & students</p>
                    </div>
                </div>
                <div class="bg-white/40 backdrop-blur-3xl p-12 rounded-[4rem] border border-brand-primary/10 shadow-3xl shadow-black/5">
                    {{ comments_section() }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
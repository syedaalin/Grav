{# 
   Student Login (Moodle Bridge)
   @desc Login widget that redirects to the Moodle LMS.
#}

{% set title = theme_config.student_login_title|default('Student Login') %}
{% set desc = theme_config.student_login_description|default('Access your Moodle courses and dashboard.') %}
{% set btn_text = theme_config.student_login_button_text|default('Sign In to Portal') %}

<section class="student-login py-24 bg-surface-default relative overflow-hidden @container [content-visibility:auto]">
    <div class="container mx-auto px-6 max-w-5xl">
        <div class="p-10 bg-surface-sunken rounded-[2.5rem] border border-glass-border shadow-2xl relative overflow-hidden group">
            <div class="absolute inset-0 bg-gradient-to-br from-white/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none"></div>
            
            <div class="text-center mb-8 relative z-10">
                <h3 class="text-2xl font-black text-brand-dark mb-2">Student Portal</h3>
                <p class="text-brand-gray text-sm">Access your courses and dashboard</p>
            </div>

            <form action="https://moodle.aabtaab.com/login/index.php" method="post" class="space-y-4 relative z-10">
                <div>
                    <label class="sr-only">Username</label>
                    <input type="text" name="username" placeholder="Username / Email" class="w-full bg-surface-default border border-glass-border rounded-xl px-5 py-4 text-brand-dark placeholder:text-brand-gray/50 focus:outline-none focus:border-brand-primary focus:ring-4 focus:ring-brand-primary/10 transition-all font-medium">
                </div>
                <div>
                    <label class="sr-only">Password</label>
                    <input type="password" name="password" placeholder="Password" class="w-full bg-surface-default border border-glass-border rounded-xl px-5 py-4 text-brand-dark placeholder:text-brand-gray/50 focus:outline-none focus:border-brand-primary focus:ring-4 focus:ring-brand-primary/10 transition-all font-medium">
                </div>
                <button type="submit" class="w-full inline-flex items-center justify-center gap-2 px-10 py-4 bg-brand-primary text-white font-black uppercase tracking-[0.15em] text-xs rounded-xl hover:bg-brand-secondary hover:-translate-y-0.5 shadow-xl shadow-brand-primary/30 transition-all">
                    <span>Sign In</span>
                    <span class="la la-arrow-right text-lg"></span>
                </button>
            </form>

            <div class="mt-6 text-center relative z-10">
                <a href="https://moodle.aabtaab.com/login/forgot_password.php" class="text-brand-gray text-sm hover:text-brand-primary transition-colors">Forgot Password?</a>
            </div>

            <div class="absolute bottom-0 left-0 w-full h-full opacity-10 pointer-events-none">
                 <svg class="h-full w-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                    <path d="M0 100 C 20 0 50 0 100 100 Z" fill="white" />
                 </svg>
            </div>
                    {{ desc }}
                </p>
                
                <div class="flex flex-wrap gap-4 justify-center @md:justify-start pt-4">
                    <a href="https://moodle.aabtaab.com/login" target="_blank" class="group inline-flex items-center gap-4 px-10 py-5 bg-brand-primary text-white font-black uppercase tracking-[0.15em] text-xs rounded-2xl hover:bg-brand-secondary hover:-translate-y-1 shadow-xl shadow-brand-primary/30 transition-all">
                        <span>{{ btn_text }}</span>
                        <span class="la la-external-link-alt text-lg group-hover:rotate-45 transition-transform"></span>
                    </a>
                    
                    <a href="https://moodle.aabtaab.com/calendar" target="_blank" class="inline-flex items-center gap-3 px-8 py-5 bg-white/5 text-white font-bold uppercase tracking-wider text-xs rounded-2xl hover:bg-white/10 border border-white/10 transition-all">
                        <span class="la la-calendar"></span>
                        <span>Class Schedule</span>
                    </a>
                </div>
            </div>

            <div class="relative z-10 hidden @md:block">
                 <div class="w-64 h-64 bg-white/5 rounded-full flex items-center justify-center border border-white/10 backdrop-blur-md shadow-2xl animate-[float_6s_ease-in-out_infinite]">
                    <span class="la la-user-graduate text-9xl text-white/20"></span>
                 </div>
            </div>

        </div>
    </div>
</section>
